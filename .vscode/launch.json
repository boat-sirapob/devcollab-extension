// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
  "version": "0.2.0",
  "configurations": [
    {
			"name": "Run Extension",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}"
			],
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "preLaunchTask": "build:extension"
		},
    {
      "name": "Peer 1 (Manual Window)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "code",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--user-data-dir=${workspaceFolder}/.vscode-peer1",
        "--new-window"
      ],
      "console": "internalConsole"
    },
    {
      "name": "Peer 2 (Manual Window)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "code",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--user-data-dir=${workspaceFolder}/.vscode-peer2",
        "--new-window"
      ],
      "console": "internalConsole"
    }
  ],
  "compounds": [
    {
      "name": "Run Both Peers",
      "configurations": ["Peer 1 (Manual Window)", "Peer 2 (Manual Window)"]
    }
  ]
}
