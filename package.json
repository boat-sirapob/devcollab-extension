{
  "name": "devcollab",
  "displayName": "DevCollab",
  "description": "UofG Level 4 Individual Project - Extending an IDE with Tools for Collaborative Development/Testing ",
  "version": "0.0.1",
  "license": "MIT",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/boat-sirapob/devcollab-extension.git"
  },
  "type": "module",
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "devcollab",
          "title": "DevCollab",
          "icon": "media/devcollab.svg"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "devcollab",
        "contents": "[Host Session](command:devcollab.hostSession)\n[Join Session](command:devcollab.joinSession)"
      }
    ],
    "views": {
      "devcollab": [
        {
          "id": "devcollab",
          "name": "DevCollab",
          "icon": "media/devcollab.svg"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "devcollab.endSession",
          "when": "devcollab.isInSession",
          "group": "navigation"
        }
      ]
    },
    "commands": [
      {
        "command": "devcollab.test",
        "title": "DevCollab: Test Command"
      },
      {
        "command": "devcollab.hostSession",
        "title": "DevCollab: Host Session"
      },
      {
        "command": "devcollab.joinSession",
        "title": "DevCollab: Join Session"
      },
      {
        "command": "devcollab.endSession",
        "title": "DevCollab: End Session",
        "icon": "$(close)"
      },
      {
        "command": "devcollab.undo",
        "title": "DevCollab: Undo"
      },
      {
        "command": "devcollab.redo",
        "title": "DevCollab: Redo"
      },
      {
        "command": "devcollab.copyRoomCode",
        "title": "DevCollab: Copy Room Code"
      }
    ],
    "keybindings": [
      {
        "command": "devcollab.undo",
        "key": "ctrl+z",
        "mac": "cmd+z",
        "when": "editorTextFocus"
      },
      {
        "command": "devcollab.redo",
        "key": "ctrl+shift+z",
        "mac": "cmd+shift+z",
        "when": "editorTextFocus"
      }
    ]
  },
  "configuration": {
      "title": "DevCollab",
      "properties": {
        "devcollab.serverUrl": {
          "type": "string",
          "default": "wss://collab.boat-sirapob.com",
          "description": "WebSocket server URL for real-time collaboration"
        },
        "devcollab.httpServerUrl": {
          "type": "string",
          "default": "https://collab.boat-sirapob.com",
          "description": "HTTP server URL for REST API calls"
        }
      }
    },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/lodash.throttle": "^4.1.9",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.0",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@hocuspocus/provider": "^3.4.3",
    "lodash": "^4.17.21",
    "lodash.throttle": "^4.1.1",
    "peer": "^1.0.2",
    "peerjs": "^1.5.5",
    "y-websocket": "^3.0.0",
    "yjs": "^13.6.27"
  }
}
