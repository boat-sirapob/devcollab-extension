{
  "name": "devcollab",
  "displayName": "DevCollab",
  "description": "UofG Level 4 Individual Project - Extending an IDE with Tools for Collaborative Development/Testing ",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "type": "module",
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "devcollab.connect",
        "title": "DevCollab: Connect to peer"
      },
      {
        "command": "devcollab.openConnection",
        "title": "DevCollab: Open Connection"
      },
      {
        "command": "devcollab.sendMessage",
        "title": "DevCollab: Send Message"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/lodash.throttle": "^4.1.9",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "lodash.throttle": "^4.1.1",
    "peer": "^1.0.2",
    "peerjs": "^1.5.5",
    "y-websocket": "^3.0.0",
    "yjs": "^13.6.27"
  }
}
