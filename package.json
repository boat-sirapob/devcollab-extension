{
    "name": "devcollab",
    "publisher": "boat-sirapob",
    "displayName": "DevCollab",
    "description": "UofG Level 4 Individual Project - Extending an IDE with Tools for Collaborative Development/Testing ",
    "version": "0.2.1",
    "license": "MIT",
    "engines": {
        "vscode": "^1.104.0"
    },
    "categories": [
        "Other"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/boat-sirapob/devcollab-extension.git"
    },
    "type": "module",
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "devcollab",
                    "title": "DevCollab",
                    "icon": "media/devcollab.svg"
                }
            ]
        },
        "viewsWelcome": [
            {
                "view": "devcollab.mainWelcome",
                "contents": "[Host Session](command:devcollab.hostSession)\n[Join Session](command:devcollab.joinSession)"
            },
            {
                "view": "devcollab.terminals",
                "contents": "No terminals being shared.\n[Share Terminal](command:devcollab.shareTerminal)"
            },
            {
                "view": "devcollab.servers",
                "contents": "No servers being shared.\n[Share Server](command:devcollab.shareServer)"
            }
        ],
        "views": {
            "devcollab": [
                {
                    "id": "devcollab.mainWelcome",
                    "name": "DevCollab Welcome",
                    "icon": "media/devcollab.svg",
                    "when": "!devcollab.isInSession"
                },
                {
                    "id": "devcollab.main",
                    "name": "DevCollab",
                    "icon": "media/devcollab.svg",
                    "when": "devcollab.isInSession",
                    "type": "webview"
                },
                {
                    "id": "devcollab.terminals",
                    "name": "Shared Terminals",
                    "icon": "media/terminal.svg",
                    "when": "devcollab.isInSession"
                },
                {
                    "id": "devcollab.servers",
                    "name": "Shared Servers",
                    "icon": "media/server.svg",
                    "when": "devcollab.isInSession"
                },
                {
                    "type": "webview",
                    "id": "devcollab.chat",
                    "name": "Chat",
                    "icon": "media/chat.svg",
                    "when": "devcollab.isInSession"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "devcollab.endSession",
                    "when": "devcollab.isInSession && view == devcollab.main",
                    "group": "navigation"
                },
                {
                    "command": "devcollab.shareTerminal",
                    "when": "devcollab.isInSession && view == devcollab.terminals",
                    "group": "navigation"
                },
                {
                    "command": "devcollab.shareServer",
                    "when": "devcollab.isInSession && view == devcollab.servers",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "devcollab.stopSharedTerminal",
                    "when": "devcollab.isInSession && view == devcollab.terminals && viewItem == ownTerminal",
                    "group": "inline"
                },
                {
                    "command": "devcollab.stopSharedServer",
                    "when": "devcollab.isInSession && view == devcollab.servers && viewItem == ownServer",
                    "group": "inline"
                },
                {
                    "command": "devcollab.toggleFollow",
                    "when": "devcollab.isInSession && view == devcollab.main && viewItem == collaborator",
                    "group": "inline"
                }
            ]
        },
        "commands": [
            {
                "command": "devcollab.test",
                "title": "DevCollab: Test Command"
            },
            {
                "command": "devcollab.hostSession",
                "title": "DevCollab: Host Session"
            },
            {
                "command": "devcollab.joinSession",
                "title": "DevCollab: Join Session"
            },
            {
                "command": "devcollab.endSession",
                "title": "DevCollab: End Session",
                "icon": "$(close)"
            },
            {
                "command": "devcollab.undo",
                "title": "DevCollab: Undo"
            },
            {
                "command": "devcollab.redo",
                "title": "DevCollab: Redo"
            },
            {
                "command": "devcollab.copyRoomCode",
                "title": "DevCollab: Copy Room Code"
            },
            {
                "command": "devcollab.toggleFollow",
                "title": "DevCollab: Follow Collaborator"
            },
            {
                "command": "devcollab.shareTerminal",
                "title": "DevCollab: Share Terminal",
                "icon": "$(terminal-new)"
            },
            {
                "command": "devcollab.joinSharedTerminal",
                "title": "DevCollab: Join Shared Terminal"
            },
            {
                "command": "devcollab.stopSharedTerminal",
                "title": "DevCollab: Stop Sharing Terminal",
                "icon": "$(close)"
            },
            {
                "command": "devcollab.shareServer",
                "title": "DevCollab: Share Server",
                "icon": "$(plus)"
            },
            {
                "command": "devcollab.joinSharedServer",
                "title": "DevCollab: Join Shared Server"
            },
            {
                "command": "devcollab.stopSharedServer",
                "title": "DevCollab: Stop Sharing Server",
                "icon": "$(close)"
            }
        ],
        "keybindings": [
            {
                "command": "devcollab.undo",
                "key": "ctrl+z",
                "mac": "cmd+z",
                "when": "editorTextFocus"
            },
            {
                "command": "devcollab.redo",
                "key": "ctrl+shift+z",
                "mac": "cmd+shift+z",
                "when": "editorTextFocus"
            }
        ]
    },
    "configuration": {
        "title": "DevCollab",
        "properties": {
            "devcollab.serverUrl": {
                "type": "string",
                "default": "wss://collab.boat-sirapob.com",
                "description": "WebSocket server URL for real-time collaboration"
            },
            "devcollab.httpServerUrl": {
                "type": "string",
                "default": "https://collab.boat-sirapob.com",
                "description": "HTTP server URL for REST API calls"
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "yarn run webview:build && yarn run compile && yarn run bundle",
        "webview:build": "yarn --cwd webview build",
        "compile": "tsc -p ./",
        "bundle": "node ./esbuild.config.mjs",
        "watch:tsc": "tsc -watch -p ./",
        "watch:bundle": "node ./esbuild.config.mjs --watch",
        "pretest": "yarn run compile && yarn run lint",
        "lint": "eslint src",
        "test": "vscode-test",
        "package": "vsce package"
    },
    "devDependencies": {
        "@types/lodash.throttle": "^4.1.9",
        "@types/mocha": "^10.0.10",
        "@types/node": "22.x",
        "@types/vscode": "^1.104.0",
        "@typescript-eslint/eslint-plugin": "^8.42.0",
        "@typescript-eslint/parser": "^8.42.0",
        "@vscode/test-cli": "^0.0.11",
        "@vscode/test-electron": "^2.5.2",
        "@vscode/vsce": "^3.7.0",
        "esbuild": "^0.27.3",
        "eslint": "^9.34.0",
        "typescript": "^5.9.2"
    },
    "dependencies": {
        "@hocuspocus/provider": "^3.4.3",
        "lodash": "^4.17.21",
        "lodash.throttle": "^4.1.1",
        "node-pty": "^1.1.0",
        "peer": "^1.0.2",
        "peerjs": "^1.5.5",
        "reflect-metadata": "^0.2.2",
        "tsyringe": "^4.10.0",
        "uuid": "^13.0.0",
        "y-websocket": "^3.0.0",
        "yjs": "^13.6.27"
    }
}
